class Library:
    def __init__(self, books):
        self.available_books = books
        self.issued_books = {}

    def display_books(self):
        if not self.available_books:
            print("\nNo books available right now.\n")
        else:
            print("\nAvailable Books:")
            for book in self.available_books:
                print("-", book)
            print()

    def issue_book(self, book_name, student_name):
        if book_name in self.available_books:
            self.available_books.remove(book_name)
            self.issued_books[book_name] = student_name
            print(f"\n'{book_name}' has been issued to {student_name}.\n")
        else:
            print("\nSorry, this book is not available.\n")

    def return_book(self, book_name):
        if book_name in self.issued_books:
            self.available_books.append(book_name)
            student = self.issued_books.pop(book_name)
            print(f"\n'{book_name}' returned by {student}.\n")
        else:
            print("\nThis book was not issued from here.\n")


# -------- Main Program --------
books_list = ["Python", "Maths", "Accounts", "Economics", "Business Studies"]
library = Library(books_list)

while True:
    print("===== LIBRARY MANAGEMENT SYSTEM =====")
    print("1. Display Available Books")
    print("2. Issue a Book")
    print("3. Return a Book")
    print("4. Exit")

    choice = input("Enter your choice (1-4): ")

    if choice == "1":
        library.display_books()

    elif choice == "2":
        book = input("Enter book name to issue: ")
        student = input("Enter student name: ")
        library.issue_book(book, student)

    elif choice == "3":
        book = input("Enter book name to return: ")
        library.return_book(book)

    elif choice == "4":
        print("\nThank you for using the Library System ðŸ˜Š")
        break

    else:
        print("\nInvalid choice! Please try again.\n")
